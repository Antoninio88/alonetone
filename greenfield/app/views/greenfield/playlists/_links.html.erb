<ul class="downloads-links">
  <% @playlist.downloads.each do |download| %>
    <li>
     <%= link_to download.url, class: "download-button" do %>
       <i class="fa fa-download"></i><%= download.title %>
     <% end %>
   </li>
  <% end %>
</ul>

<ul class="external-links">
  <% [:link1, :link2, :link3].collect do |link| %>
    <li>
      <%= external_link_for(@playlist.alonetone_playlist.send(link)) if @playlist.alonetone_playlist.send(link) %>  
    </li>
  <% end %>
</ul>