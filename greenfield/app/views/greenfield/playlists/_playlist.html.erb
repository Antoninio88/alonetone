<div class="playlist">
  <%= link_to image_tag(@playlist.alonetone_playlist.cover(:original)), user_playlist_path(@playlist.user, @playlist), remote: true, class: 'small-cover', style: ('display:none;' unless @post) %>
  <h1 class="<%= 'cover' unless @asset %>"> 
    <%= link_to @playlist.alonetone_playlist.title, user_playlist_path(@playlist.user, @playlist) %>
  </h1>
  <h2><span class="by">by</span> <%= @playlist.user.display_name %></h2>  
  
  <ul class="tracklist">
  <% @playlist.tracks.each do |track| %>
    <li class="<%= ' active' if track.asset == @asset %>"
      data-sound-id="<%= [track.asset.user.login, track.asset.permalink].join('/') %>">
      
    <!-- Play button automagically plays AND changes to relevant track details  -->
    <%= link_to user_playlist_post_path(@playlist.user, @playlist, track.asset), remote: true, class: 'play-button' do %>
      <i class="fa fa-play"></i>
    <% end %>
    
    <!-- Track title just switches track details-->
    <%= link_to user_playlist_post_path(@playlist.user, @playlist, track.asset), remote: true do %>
      <span>
        <%= "%02d" % track.position %>. <%= track.name %>
      </span>
    <% end %>
    </li>
  <% end %>
  </ul>

  <div class="sidebar-downloads">
    <% @playlist.downloads.each do |download| %>
      <%= link_to download.url, class: "download-button" do %>
        <i class="fa fa-download"></i><%= download.title %>
      <% end %>
    <% end %>
    <a class="download-button" href="javascript:void(0);"><i class="fa fa-spotify"></i>Listen on Spotify</a>        
    <a class="download-button" href="javascript:void(0);"><i class="fa fa-apple"></i>Listen on iTunes</a>        
  </div>
</div>

