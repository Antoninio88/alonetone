<div class="track-content">
  <%= player(@post.asset) %>  
  <div class="post-content">
    <h1><%= @post.asset.name %></h1>
    <% if owner? and @playlist %> 
      <%= link_to("Edit", user_edit_playlist_post_path(@user, @playlist, @post), class: "edit-link") %>
    <% elsif owner? %>
      <%= link_to("Edit", edit_user_post_path(@user, @post), class: "edit-link") %>
    <% end %>
    <%= markdown(@post.body, post: @post) %>    
  </div>
   
  <% if @post.asset.credits.present? %>
    <div class="track-credits">
      <%= markdown(@post.asset.credits) %>    
    </div>
  <% end %>
</div>
