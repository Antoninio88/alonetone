<%= content_tag :div, :class => 'asset ' do %>
  <% if white_theme_enabled? %>
    <% render partial: 'asset_white', :locals => {:asset => asset}%>
  <% else %>
  <%= render :layout => 'assets/asset_layout', :locals => {:asset => asset} do %>
    <%= link_to asset.user.name, user_home_path(asset.user), :class => 'artist', :title => "#{asset.user.name} on alonetone " %>
  <% end %>
  <%= render :partial => 'assets/asset_tabs', :locals => {:asset => asset} unless @single_track %>
  <% end %>
<% end %>

