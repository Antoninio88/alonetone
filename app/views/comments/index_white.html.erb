<div id="columns">
  <% if params[:login] %>
    <div id="left">
      <h2>Comments on <%= @user.name %>'s stuff</h2>
      <div class="comments_area box">
        <div class="mini_paginator">
          <%== pagy_nav @pagy %>
        </div>
        <%= render partial: 'shared/comment', collection: @comments %>
        <div class="mini_paginator">
          <%== pagy_nav @pagy %>
        </div>
      </div>
    </div>

    <div id="right">
      <h2>Comments made by <%= @user.name %> </h2>
      <div class="comments_area box">
        <div class="mini_paginator">
          <%== pagy_nav @pagy_comments_made %>
        </div>
        <%= render partial: 'shared/comment', collection: @comments_made %>
        <div class="mini_paginator">
          <%== pagy_nav @pagy_comments_made %>
        </div>
      </div>
    </div>
  <% else %>
    <div id="left">
      <h1>Recent Comments</h1>
      <div class="comments_area box">
        <div class="mini_paginator">
          <%== pagy_nav @pagy %>
        </div>
        <%= render partial: 'shared/comment', collection: @comments %>
        <div class="mini_paginator">
          <%== pagy_nav @pagy %>
        </div>
      </div>
    </div>

    <% if moderator? or admin? %>
      <div id="right">
        <h1>Recent SPAM</h1>
        <div class="comments_area box">
          <div class="mini_paginator">
            <%== pagy_nav @pagy_spam %>
          </div>
          <%= render partial: 'shared/comment', collection: @spam %>
          <div class="mini_paginator">
            <%== pagy_nav @pagy_spam %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
