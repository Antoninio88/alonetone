<div class="footer_alonetoners_online">
  <h3>Alonetoners online</h3>
    <ul>
      <li>
        <%= User.currently_online.collect do |user| %>
          <% link_to user.name, main_app.user_home_path(user.login) %>
        <% end.join(', ').html_safe %>
      </li>
    </ul>
</div>  

